    <script>
        // Retrieve user's preferred theme from local storage
        var preferredTheme = localStorage.getItem('theme');

        // If the user has previously selected a theme, apply it on page load
        if (preferredTheme === 'dark') {
            document.body.classList.add('dark-theme');
        }

        // Add click event listener to toggle between light and dark themes
        var Icon = document.getElementById('Icon');

        Icon.onclick = function () {
            document.body.classList.toggle('dark-theme');

            // Store the user's theme preference in local storage
            var theme = document.body.classList.contains('dark-theme') ? 'dark' : 'light';
            localStorage.setItem('theme', theme);
        };
    </script>
