
@model List<eUseControl.ViewModels.OrderViewModel>

@{
    ViewBag.Title = "MyOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    th {
        background-color: #000000;
        color: #f5f5f5
    }

    .no-users {
        font-size: 24px;
        text-align: center;
        margin-bottom: 80px;
        margin-top: 150px;
    }
</style>
@if (Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Country</th>
                <th>Address</th>
                <th>Town</th>
                <th>Postal Code</th>
                <th>Phone</th>
                <th>Email</th>

                <th>Order Date</th>
                <th>Ordered Cupcakes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderID</td>

                    <td>@order.FirstName</td>
                    <td>@order.LastName</td>
                    <td>@order.Country</td>
                    <td>@order.Address</td>
                    <td>@order.Town</td>
                    <td>@order.PostalCode</td>
                    <td>@order.Phone</td>
                    <td>@order.Email</td>

                    <td>@order.OrderDate</td>
                    <td>@Html.ActionLink("Click", "OrderedCupcakes", "Admin", new { orderId = order.OrderID }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="no-users">There are no orders yet.</p>
}