<script>
    // Add a click event listener to the play button
    var playButton = document.querySelector('.play-btn');
    playButton.addEventListener('click', function (event) {
        event.preventDefault();

        // Get the YouTube video URL from the href attribute
        var videoUrl = playButton.getAttribute('href');

        // Create an iframe element and set its source to the YouTube video URL
        var iframe = document.createElement('iframe');
        iframe.src = videoUrl;
        iframe.width = '100%';
        iframe.height = '100%';
        iframe.allowfullscreen = true;

        // Replace the video container with the iframe
        var videoContainer = document.querySelector('.about__video');
        videoContainer.innerHTML = '';
        videoContainer.appendChild(iframe);
    });
</script>
